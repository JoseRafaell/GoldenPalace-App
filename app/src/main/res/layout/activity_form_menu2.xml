<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    tools:context=".FormMenu2">

    <androidx.cardview.widget.CardView
        android:id="@+id/ContainerImgCardapio3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/bt_Voltar_menu2"        app:layout_constraintStart_toStartOf="parent"

        >

        <ImageView
            android:id="@+id/imgFood3"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/salada" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtFoodName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salada"
        android:textColor="@color/crimson"
        android:textSize="25sp"
        android:textStyle="bold"
       android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toEndOf="@id/ContainerImgCardapio3"
        app:layout_constraintTop_toTopOf="@id/bt_Voltar_menu2"/>

    <TextView
        android:id="@+id/txtFoodDescricao3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A salada é um prato originalmente montado apenas com vegetais, mas isso não significa que algumas fontes de proteína animal não combinem com esses alimentos."
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="10dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toEndOf="@id/ContainerImgCardapio3"
        app:layout_constraintTop_toBottomOf="@id/txtFoodName3"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txtPreco1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 20.00"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/ContainerImgCardapio3"
        app:layout_constraintTop_toBottomOf="@id/txtFoodDescricao3"
        />

    <Button
        android:id="@+id/btAdd3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Add"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/red"
        app:layout_constraintTop_toBottomOf="@id/txtFoodDescricao3"
        app:layout_constraintStart_toEndOf="@id/txtPreco1"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/Divisoria3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/white"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/btAdd3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/ContainerImgCardapio4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@id/ContainerImgCardapio3"
        app:layout_constraintTop_toBottomOf="@id/Divisoria3"
        >
        <ImageView
            android:id="@+id/imgFood4"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/spagetti"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtFoodName4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spaghetti Carbonara"
        android:textColor="@color/crimson"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/ContainerImgCardapio4"
        app:layout_constraintTop_toBottomOf="@id/Divisoria3"/>

    <TextView
        android:id="@+id/txtFoodDescricao4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="O spaghetti carbonara é um tipo de massa que leva pancetta, queijo, gemas de ovos e pimenta. É um clássico servido em qualquer restaurante de culinária internacional."
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="10dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toEndOf="@id/ContainerImgCardapio4"
        app:layout_constraintTop_toBottomOf="@id/txtFoodName4"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txtPreco4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 35.00"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/ContainerImgCardapio4"
        app:layout_constraintTop_toBottomOf="@id/txtFoodDescricao4"
        />

    <Button
        android:id="@+id/btAdd4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Add"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/red"
        app:layout_constraintTop_toBottomOf="@id/txtFoodDescricao4"
        app:layout_constraintStart_toEndOf="@id/txtPreco4"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/Divisoria4"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/white"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/btAdd4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/ContainerImgCardapio5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@id/ContainerImgCardapio3"
        app:layout_constraintTop_toBottomOf="@id/Divisoria4"
        >
        <ImageView
            android:id="@+id/imgFood5"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/negroni"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtFoodName5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Negroni"
        android:textColor="@color/crimson"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/ContainerImgCardapio4"
        app:layout_constraintTop_toBottomOf="@id/Divisoria4"/>

    <TextView
        android:id="@+id/txtFoodDescricao5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Em sua essência, o Negroni tem três ingredientes: gim, vermute doce e o bitter italiano Campari. "
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="10dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toEndOf="@id/ContainerImgCardapio5"
        app:layout_constraintTop_toBottomOf="@id/txtFoodName5"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txtPreco5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 35.00"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/ContainerImgCardapio5"
        app:layout_constraintTop_toBottomOf="@id/txtFoodDescricao5"
        />
    <Button
        android:id="@+id/btAdd5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Add"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/red"
        app:layout_constraintTop_toBottomOf="@id/txtFoodDescricao5"
        app:layout_constraintStart_toEndOf="@id/txtPreco5"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_Voltar_menu2"
        style="@style/ButtomVoltar"
        android:layout_marginTop="12dp"
        android:text="Voltar"
        android:drawableLeft="@drawable/ic_arrow_left"
        android:drawableTint="@color/white"
        app:layout_constraintStart_toStartOf="@id/ContainerImgCardapio3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>