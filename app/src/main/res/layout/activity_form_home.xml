<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormHome">

    <ImageView
        android:id="@+id/imgFood1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/fundoshadow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imgLogoHome"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/logohome"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_home"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/text_home"
        android:textSize="35sp"
        android:textColor="@color/bege"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgLogoHome"
        />
    <TextView
        android:id="@+id/text_home2"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/text_home2"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_home"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_reserva_home"
        style="@style/Buttom_home"
        android:layout_marginTop="40dp"
        android:text="Reserva"
        android:drawableRight="@drawable/ic_arrow_right"
        android:drawableTint="@color/bege"
        app:layout_constraintTop_toBottomOf="@id/text_home2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_menu_home"
        style="@style/Buttom_home"
        android:layout_marginTop="20dp"
        android:text="Menu"
        android:drawableRight="@drawable/ic_arrow_right"
        android:drawableTint="@color/bege"
        app:layout_constraintTop_toBottomOf="@id/bt_reserva_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_faleConosco_home"
        style="@style/Buttom_home"
        android:layout_marginTop="55dp"
        android:text="Fale Conosco"
        android:drawableRight="@drawable/ic_arrow_right"
        android:drawableTint="@color/bege"
        app:layout_constraintTop_toBottomOf="@id/bt_menu_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_perfil_home"
        style="@style/Buttom_home"
        android:layout_marginTop="20dp"
        android:text="Perfil"
        android:drawableRight="@drawable/ic_arrow_right"
        android:drawableTint="@color/bege"
        app:layout_constraintTop_toBottomOf="@id/bt_faleConosco_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>