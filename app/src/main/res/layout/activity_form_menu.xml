<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    tools:context=".FormMenu">

    <androidx.cardview.widget.CardView
        android:id="@+id/ContainerImgCardapio1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ImageView
            android:id="@+id/imgFood1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/lasanha" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtFoodName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lasanha Bolonhesa"
        android:textColor="@color/crimson"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/ContainerImgCardapio1"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtFoodDescricao1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A Lasanha à Bolonhesa  é um prato tipicamente originado na Itália é composta por uma deliciosa massa, recheada com molho à bolonhesa, carne moída e presunto, coberta com molho branco e mussarela, essa receita reúne também uma seleção de produtos de alta qualidade."
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="10dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toEndOf="@id/ContainerImgCardapio1"
        app:layout_constraintTop_toBottomOf="@id/txtFoodName1"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txtPreco1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 25.00"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/ContainerImgCardapio1"
        app:layout_constraintTop_toBottomOf="@id/txtFoodDescricao1"
        />

    <Button
        android:id="@+id/btAdd"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Add"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/red"
        app:layout_constraintTop_toBottomOf="@id/txtFoodDescricao1"
        app:layout_constraintStart_toEndOf="@id/txtPreco1"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/Divisoria1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/white"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/btAdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/ContainerImgCardapio2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@id/ContainerImgCardapio1"
        app:layout_constraintTop_toBottomOf="@id/Divisoria1"
        >
        <ImageView
            android:id="@+id/imgFood2"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/macarrao"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtFoodName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Macarrão"
        android:textColor="@color/crimson"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/ContainerImgCardapio2"
        app:layout_constraintTop_toBottomOf="@id/Divisoria1"/>

    <TextView
        android:id="@+id/txtFoodDescricao2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="O macarrão é um alimento que está presente na mesa dos brasileiros há muitos anos e é extremamente popular. Ele é versátil, pois pode ser combinado com diversos tipos de molhos e acompanhamentos e também rápido e fácil de fazer sendo um dos pratos preferidos de quem mora só."
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="10dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toEndOf="@id/ContainerImgCardapio1"
        app:layout_constraintTop_toBottomOf="@id/txtFoodName2"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txtPreco2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 30.00"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/ContainerImgCardapio1"
        app:layout_constraintTop_toBottomOf="@id/txtFoodDescricao2"
        />

    <Button
        android:id="@+id/btAdd2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Add"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/red"
        app:layout_constraintTop_toBottomOf="@id/txtFoodDescricao2"
        app:layout_constraintStart_toEndOf="@id/txtPreco2"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/Divisoria2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/white"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/btAdd2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_Next"
        style="@style/ButtomNext"
        android:layout_marginTop="45dp"
        android:text="Proximo"
        app:layout_constraintTop_toBottomOf="@id/Divisoria2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>